				.content
					.btn-group
						button.btn.btn-default.btn-xs
							span.glyphicon.glyphicon-step-backward
						button.btn.btn-default.btn-xs(ng-disabled='!status.links.unpause', ng-if='!status.links.pause', ng-click='action(status.links.unpause)')
							span.glyphicon.glyphicon-play
						button.btn.btn-default.btn-xs(ng-if='status.links.pause', ng-click='action(status.links.pause)')
							span.glyphicon.glyphicon-pause
						button.btn.btn-default.btn-xs(ng-disabled='!status.links.stop', ng-click='action(status.links.stop)')
							span.glyphicon.glyphicon-stop
						button.btn.btn-default.btn-xs
							span.glyphicon.glyphicon-step-forward

					.slider-volume
						input(type='text', value='', data-slider-orientation='horizontal', data-slider-tooltip='hide').slider
						span.glyphicon.glyphicon-volume-up

