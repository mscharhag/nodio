doctype html
html(ng-app='nodioClient')
	head
		script(src='/javascript/lib/jquery.js')
		script(src='/javascript/lib/angular.js')
		script(src='/javascript/lib/bootstrap.js')
		script(src='/javascript/lib/bootstrap-slider.js')
		script(src='/javascript/app/controller/trackListController.js')
		script(src='/javascript/app/controller/playerController.js')
		script(src='/javascript/api.js')
		//script(src='/javascript/player.js')
		title= title
		link(rel='stylesheet', href='/css/bootstrap.css')
		link(rel='stylesheet', href='/css/nodio.css')
		link(rel='stylesheet', href='/css/slider.css')
		meta(name="viewport", content="width=device-width, initial-scale=1.0")

	body()
		.container
			.row
				hr
			.player.content(ng-controller='playerController')
